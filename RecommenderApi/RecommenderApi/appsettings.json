{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "UrConfiguration": {
    "EngineId": "gift-recommender",
    "HarnessUrl": "http://localhost:9090"
  },
  "GiftRecommenderDatabase": {
    "ConnectionString": "mongodb://localhost:27017",
    "DatabaseName": "gift-recommender",
    "CollectionName": ""
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Sinks.File", "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "../logs/webapi-.log",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {CorrelationId} {Level:u3}] {Username} {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Console",
        "Args": {
          "Args": {
            "formatter": "Serilog.Formatting.Compact.RenderedCompactJsonFormatter, Serilog.Formatting.Compact"
          }
        }
      }
    ]
  },
  "JWT": {
    "ValidAudience": "https://localhost:7282",
    "ValidIssuer": "https://localhost:7282",
    "Secret": "szupertitkosssssssssssss"
  }
}
